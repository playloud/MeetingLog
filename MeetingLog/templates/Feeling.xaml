<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MeetingLog.Feeling">
    <ContentView.Content>
        <StackLayout>
            <Label Text="How Do you feel today?" XAlign="Center" FontSize="30" HorizontalOptions="Center"/>
            <Picker x:Name="pickerFeeling" HorizontalOptions="FillAndExpand">
                <Picker.Items>
                    <x:String>Excellent</x:String>
                    <x:String>Very Good</x:String> 
                    <x:String>Good</x:String>
                    <x:String>SoSo</x:String>
                    <x:String>Not good</x:String>
                    <x:String>Bad</x:String>
                    <x:String>Very Bad</x:String>
                    <x:String>Worst</x:String>
                </Picker.Items>
            </Picker> 
        </StackLayout>
        
    </ContentView.Content>
</ContentView>
